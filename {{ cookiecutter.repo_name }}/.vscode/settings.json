    "python.languageServer": "Pylance", // Pylanceを使う

    "python.analysis.typeCheckingMode": "basic", // 型チェックを有効化(厳しさは strict > basic > off)

    "autoDocstring.docstringFormat": "numpy", // docstringのフォーマットをnumpy形式に設定

    "workbench.iconTheme": "material-icon-theme", // アイコンテーマをMaterialに

    "files.exclude": { // ファイルを非表示にする
        "**/*.pyc": true,
        "**/*.gitkeep": true,
        // "**/*.pth": true,
    },

    "notebook.lineNumbers": "on", // ノートブックの行番号を表示

    // 画像のプレビューの最大サイズを設定
    "gutterpreview.imagePreviewMaxHeight": 500,
    "gutterpreview.imagePreviewMaxWidth": 700,

    // ミニマップの設定
    "editor.minimap.enabled": true,

}